<Window x:Class="Noteplaid.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Noteplaid" Height="500" Width="600">
    <Grid>
        <Grid.Background>
            <ImageBrush Opacity="0.7" ImageSource="plaid.png"/>
        </Grid.Background>
        <TextBox TextWrapping="Wrap" SpellCheck.IsEnabled="True" AcceptsReturn="True" AcceptsTab="True" Background="{x:Null}" FontSize="15"/>
    </Grid>
</Window>
